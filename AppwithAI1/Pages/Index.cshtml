<h2>DHTMLGANTT</h2>
<script src="https://cdn.dhtmlx.com/gantt/edge/dhtmlxgantt.js"></script>

<div id="gantt_here" style='width:100%; height:100%;'></div>
<script>
    gantt.init("gantt_here");

    // Create an array of 20 tasks for the GANTT chart
    var tasks = [];
    for (var i = 0; i < 20; i++) {
        // Pad the day and month with leading zeroes to ensure correct formatting
        var day = (i + 1).toString().padStart(2, "0");
        var month = "12".padStart(2, "0");
        tasks.push({
            id: i + 1,
            text: "Task " + (i + 1),
            start_date: "2022-" + month + "-" + day,
            duration: 3,
            progress: 0.4
        });
    }

    // Enable interactive features for the GANTT chart
    gantt.config.drag_move = true;
    gantt.config.drag_progress = true;
    gantt.config.drag_resize = true;
    gantt.config.details_on_dblclick = true;
    gantt.config.select_task = true;

    // Parse the tasks array to generate the GANTT chart
    gantt.parse(tasks);
</script>


